.pubTitle{display:flex;justify-content: space-between;height: 60rpx;align-items: center;margin-bottom: 40rpx;}
.pubTitle .txt{font-size:40rpx ;height: 100%;position: relative;padding-left:20rpx;}
.pubTitle .txt::before{display:block;width: 10rpx;height: 30rpx;background:#d80b07;content:"";position: absolute; left: 0;top: 50%;margin-top: -15rpx;}
.pubTitle .more{font-size:34rpx;color:#666666}

.header{width:750rpx;height: 90rpx;}
.hdCon{ display:flex;justify-content: space-between;align-items: center;height: 100%;}
.hdCon .logo{width: 250rpx;}
.hdCon .kefu{width:50rpx;}
.hdCon image{height: 100%;}
.kefu{position: relative;animation:dh linear 1s infinite alternate}
.kefu .btn{position:absolute;width: 100%;height: 100%;top: 0;left: 0;opacity: 0;}

.banner{width: 100%;height: 300rpx;}
.banner swiper{height: 100%;width: 100%;}
.banner image{width: 100%;height:300rpx}

